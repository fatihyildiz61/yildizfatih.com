{
  "name": "fatih-yildiz-portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "npm run generate-sitemap && astro build",
    "build:prod": "NODE_ENV=production npm run build",
    "preview": "astro preview",
    "astro": "astro",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "deploy": "npm run build:prod && git add . && git commit -m 'Auto-deploy' && git push",
    "test-ssl": "node scripts/ssl-test.js",
    "seo-check": "node scripts/seo-check.cjs",
    "google-console-test": "node scripts/google-search-console-test.js",
    "analyze": "npm run build:prod && npx bundle-analyzer dist/_astro/*.js",
    "lighthouse": "npx lighthouse https://www.yildizfatih.com --output=json --output-path=./lighthouse-report.json",
    "performance": "npm run build:prod && npm run lighthouse",
    "optimize-images": "node scripts/optimize-images.js"
  },
  "dependencies": {
    "@astrojs/mdx": "^2.1.1",
    "@astrojs/tailwind": "^5.1.0",
    "@fortawesome/fontawesome-free": "^7.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "astro": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "basic-ftp": "^5.0.5",
    "cssnano": "^7.1.1",
    "dotenv": "^17.2.1",
    "imagemin-webp": "^8.0.0",
    "node-fetch": "^3.3.2",
    "terser": "^5.24.0"
  },
  "devDependencies": {
    "bundle-analyzer": "^0.0.1",
    "imagemin": "^9.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "lighthouse": "^11.6.0",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.0"
  }
}
