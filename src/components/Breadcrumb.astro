---
interface Props {
  items: Array<{
    label: string;
    href?: string;
    current?: boolean;
  }>;
}

const { items } = Astro.props;
---

<nav class="mb-8" aria-label="Breadcrumb">
  <ol class="flex items-center space-x-2 text-sm font-medium">
    <li>
      <a href="/" class="text-slate-500 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 transition-colors duration-200 flex items-center" aria-label="Ana sayfaya git">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
        </svg>
        Ana Sayfa
      </a>
    </li>
    
    {items.map((item, index) => (
      <li class="flex items-center">
        <svg class="w-4 h-4 text-slate-400 mx-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
        
        {item.current ? (
          <span class="text-slate-900 dark:text-white font-medium" aria-current="page">
            {item.label}
          </span>
        ) : (
          <a href={item.href} class="text-slate-500 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 transition-colors duration-200">
            {item.label}
          </a>
        )}
      </li>
    ))}
  </ol>
</nav>
