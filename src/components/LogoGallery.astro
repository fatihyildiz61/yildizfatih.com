<style>
  .logo-gallery img {
    filter: grayscale(0);
    transition: all 0.3s ease;
  }
  
  .logo-gallery .group:hover img {
    filter: grayscale(0);
    transform: scale(1.1);
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    .logo-gallery .grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
</style>
