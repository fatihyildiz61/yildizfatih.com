---
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';

// SEO data for print design service
const seoData = {
  title: "İstanbul Baskı Tasarım Hizmetleri | Profesyonel Baskı Tasarımı 2025 | Fatih Yıldız",
  description: "İstanbul'da profesyonel baskı tasarım hizmetleri. Kartvizit, broşür, afiş, katalog tasarımı. Kurumsal baskı materyalleri, dijital baskı tasarımı. Ücretsiz danışmanlık için iletişime geçin.",
  keywords: "İstanbul baskı tasarım, kartvizit tasarımı, broşür tasarımı, afiş tasarımı, katalog tasarımı, kurumsal baskı materyalleri, dijital baskı tasarımı, baskı tasarımcı"
};
---

<BaseLayout title={seoData.title} description={seoData.description} keywords={seoData.keywords}>
  <!-- Enhanced Open Graph Meta Tags -->
  <meta property="og:title" content={seoData.title} />
  <meta property="og:description" content={seoData.description} />
  <meta property="og:image" content="/images/profile.jpg" />
  <meta property="og:url" content="https://www.yildizfatih.com/baski-tasarim" />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content="tr_TR" />
  <meta property="og:site_name" content="Fatih Yıldız Portfolio" />
  
  <!-- Enhanced Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={seoData.title} />
  <meta name="twitter:description" content={seoData.description} />
  <meta name="twitter:image" content="/images/profile.jpg" />
  <meta name="twitter:image:alt" content="İstanbul Baskı Tasarım Hizmetleri" />
  
  <!-- Structured Data for Service -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Baskı Tasarım Hizmetleri",
    "description": seoData.description,
    "provider": {
      "@type": "Person",
      "name": "Fatih Yıldız",
      "jobTitle": "Profesyonel Grafik Tasarımcı",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Istanbul",
        "addressCountry": "TR"
      }
    },
    "areaServed": {
      "@type": "Country",
      "name": "Turkey"
    },
    "serviceType": "Print Design",
    "url": "https://www.yildizfatih.com/baski-tasarim"
  })} />
  
  <Nav />
  
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center px-4 sm:px-6 -mt-32 pt-28 sm:pt-28 md:pt-28 lg:pt-28">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-white to-slate-100 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900"></div>
      <div class="absolute inset-0 opacity-30 dark:opacity-20">
        <div class="absolute top-20 left-10 w-32 h-32 bg-green-500/5 rounded-full blur-3xl"></div>
        <div class="absolute bottom-20 right-10 w-48 h-48 bg-blue-500/5 rounded-full blur-3xl"></div>
      </div>
      
      <!-- Breadcrumb -->
      <div class="absolute top-8 left-6 z-20">
        <nav class="flex items-center gap-3 text-sm" aria-label="Breadcrumb">
          <a href="/" class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">Ana Sayfa</a>
          <span class="text-slate-400">/</span>
          <span class="text-slate-900 dark:text-white font-medium">Baskı Tasarım</span>
        </nav>
      </div>
      
      <!-- Main content -->
      <div class="relative z-10 text-center max-w-4xl mx-auto">
        <h1 class="font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-[1.1] mb-6 sm:mb-8">
          <span class="block text-slate-900 dark:text-white">Profesyonel</span>
          <span class="block text-slate-900 dark:text-white"><span class="text-green-600 dark:text-green-400">Baskı</span></span>
          <span class="block text-slate-900 dark:text-white">Tasarımı</span>
        </h1>
        
        <p class="text-lg sm:text-xl md:text-2xl text-slate-600 dark:text-slate-400 max-w-3xl mx-auto mb-8 sm:mb-10 leading-relaxed">
          Kartvizit, broşür, afiş ve katalog tasarımları ile markanızı fiziksel dünyada da güçlü bir şekilde temsil ediyorum. <a href="/blog/baski-tasarim-ipuclari" class="text-blue-600 dark:text-blue-400 hover:underline">Baskı tasarım ipuçları</a> için blog yazımızı okuyabilirsiniz.
        </p>
        
        <!-- CTA buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8 sm:mb-10">
          <a href="#contact" class="group relative px-8 sm:px-10 py-4 sm:py-5 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-2xl text-base sm:text-lg">
            <span class="relative z-10">Ücretsiz Danışmanlık</span>
          </a>
          <a href="#services" class="px-8 sm:px-10 py-4 sm:py-5 border-2 border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-300 font-semibold rounded-xl hover:bg-slate-50 dark:hover:bg-slate-800 transition-all duration-300 text-base sm:text-lg">
            Hizmetlerimi Gör
          </a>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-20 bg-slate-50 dark:bg-slate-900/50">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="font-display text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-6">
            Baskı <span class="text-green-600 dark:text-green-400">Tasarım Hizmetlerim</span>
          </h2>
          <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
            Kurumsal kimliğinizi yansıtan profesyonel baskı materyalleri
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Service Card 1 -->
          <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 border border-slate-200 dark:border-slate-700 hover:shadow-xl transition-all duration-300">
            <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">Kartvizit Tasarımı</h3>
            <p class="text-slate-600 dark:text-slate-400 mb-6">
              Profesyonel ve akılda kalıcı kartvizit tasarımları oluşturuyorum.
            </p>
            <ul class="space-y-2 text-sm text-slate-600 dark:text-slate-400">
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
