---
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';

// Blog posts data - Gerçek projede content collection kullanılabilir
const blogPosts = [
  {
    slug: '2025-grafik-tasarim-trendleri',
    title: '2025\'te En Popüler Grafik Tasarım Trendleri',
    excerpt: 'Bu yılın en çok konuşulan grafik tasarım trendlerini ve markaların nasıl bu trendleri kullandığını inceliyoruz.',
    category: 'Tasarım Trendleri',
    date: '2025-01-15',
    readTime: '5 dk',
    image: '/images/profile.jpg',
    tags: ['grafik tasarım', 'trendler', '2025', 'tasarım']
  },
  {
    slug: 'logo-tasarim-fiyatlari-2025',
    title: 'Logo Tasarım Fiyatları 2025: Detaylı Rehber',
    excerpt: 'Logo tasarım hizmetlerinin fiyatları nasıl belirlenir? 2025 yılında logo tasarım maliyetleri ve kalite faktörleri.',
    category: 'Fiyat Rehberi',
    date: '2025-01-10',
    readTime: '7 dk',
    image: '/images/profile.jpg',
    tags: ['logo tasarım', 'fiyatlar', 'maliyet', 'rehber']
  },
  {
    slug: 'marka-kimligi-neden-onemli',
    title: 'Marka Kimliği Neden Bu Kadar Önemli?',
    excerpt: 'Güçlü bir marka kimliğinin işletmenizin başarısına nasıl katkı sağladığını ve nasıl oluşturulduğunu açıklıyoruz.',
    category: 'Marka Kimliği',
    date: '2025-01-05',
    readTime: '6 dk',
    image: '/images/profile.jpg',
    tags: ['marka kimliği', 'kurumsal kimlik', 'marka', 'tasarım']
  },
  {
    slug: 'sosyal-medya-tasarim-ipuclari',
    title: 'Etkili Sosyal Medya Tasarımı İçin 10 İpucu',
    excerpt: 'Sosyal medya görsellerinizin daha fazla etkileşim alması için uygulayabileceğiniz tasarım ipuçları.',
    category: 'Sosyal Medya',
    date: '2024-12-28',
    readTime: '8 dk',
    image: '/images/profile.jpg',
    tags: ['sosyal medya', 'tasarım', 'ipuçları', 'etkileşim']
  },
  {
    slug: 'ui-ux-tasarim-prensipleri',
    title: 'UI/UX Tasarımında Temel Prensipler',
    excerpt: 'Kullanıcı deneyimi tasarımının temel prensiplerini ve nasıl uygulanacağını öğrenin.',
    category: 'UI/UX Tasarım',
    date: '2024-12-20',
    readTime: '10 dk',
    image: '/images/profile.jpg',
    tags: ['UI/UX', 'kullanıcı deneyimi', 'tasarım', 'prensipler']
  },
  {
    slug: 'grafik-tasarimda-renk-psikolojisi',
    title: 'Grafik Tasarımda Renk Psikolojisi',
    excerpt: 'Renklerin insan psikolojisi üzerindeki etkilerini ve tasarımda nasıl kullanılacağını keşfedin.',
    category: 'Tasarım Teorisi',
    date: '2024-12-15',
    readTime: '6 dk',
    image: '/images/profile.jpg',
    tags: ['renk psikolojisi', 'tasarım', 'renkler', 'psikoloji']
  }
];

// SEO data
const seoData = {
  title: "Grafik Tasarım Blog | Tasarım Trendleri, İpuçları ve Rehberler | Fatih Yıldız",
  description: "Grafik tasarım dünyasından en güncel trendler, tasarım ipuçları, logo tasarım rehberleri ve marka kimliği konularında uzman görüşleri.",
  keywords: "grafik tasarım blog, tasarım trendleri, logo tasarım ipuçları, marka kimliği rehberi, UI/UX tasarım, sosyal medya tasarım"
};
---

<BaseLayout title={seoData.title} description={seoData.description} keywords={seoData.keywords}>
  <!-- Enhanced Open Graph Meta Tags -->
  <meta property="og:title" content={seoData.title} />
  <meta property="og:description" content={seoData.description} />
  <meta property="og:image" content="/images/profile.jpg" />
  <meta property="og:url" content="https://www.yildizfatih.com/blog" />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content="tr_TR" />
  <meta property="og:site_name" content="Fatih Yıldız Portfolio" />
  
  <!-- Enhanced Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={seoData.title} />
  <meta name="twitter:description" content={seoData.description} />
  <meta name="twitter:image" content="/images/profile.jpg" />
  <meta name="twitter:image:alt" content="Grafik Tasarım Blog" />
  
  <!-- Structured Data for Blog -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Blog",
    "name": "Fatih Yıldız Grafik Tasarım Blog",
    "description": seoData.description,
    "url": "https://www.yildizfatih.com/blog",
    "author": {
      "@type": "Person",
      "name": "Fatih Yıldız",
      "jobTitle": "Profesyonel Grafik Tasarımcı"
    },
    "blogPost": blogPosts.map(post => ({
      "@type": "BlogPosting",
      "headline": post.title,
      "description": post.excerpt,
      "datePublished": post.date,
      "author": {
        "@type": "Person",
        "name": "Fatih Yıldız"
      },
      "url": `https://www.yildizfatih.com/blog/${post.slug}`
    }))
  })} />
  
  <Nav />
  
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative min-h-[60vh] flex items-center justify-center px-4 sm:px-6 -mt-32 pt-28 sm:pt-28 md:pt-24 lg:pt-16">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-white to-slate-100 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900"></div>
      <div class="absolute inset-0 opacity-30 dark:opacity-20">
        <div class="absolute top-20 left-10 w-32 h-32 bg-blue-500/5 rounded-full blur-3xl"></div>
        <div class="absolute bottom-20 right-10 w-48 h-48 bg-indigo-500/5 rounded-full blur-3xl"></div>
      </div>
      
      <!-- Breadcrumb -->
      <div class="absolute top-8 left-6 z-20">
        <nav class="flex items-center gap-3 text-sm" aria-label="Breadcrumb">
          <a href="/" class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">Ana Sayfa</a>
          <span class="text-slate-400">/</span>
          <span class="text-slate-900 dark:text-white font-medium">Blog</span>
        </nav>
      </div>
      
      <!-- Main content -->
      <div class="relative z-10 text-center max-w-4xl mx-auto">
        <h1 class="font-display text-4xl sm:text-5xl md:text-6xl font-bold leading-[1.1] mb-6 sm:mb-8">
          <span class="block text-slate-900 dark:text-white">Grafik Tasarım</span>
          <span class="block text-slate-900 dark:text-white"><span class="text-blue-600 dark:text-blue-400">Blog</span></span>
        </h1>
        
        <p class="text-lg sm:text-xl md:text-2xl text-slate-600 dark:text-slate-400 max-w-3xl mx-auto mb-8 sm:mb-10 leading-relaxed">
          Tasarım dünyasından en güncel trendler, ipuçları ve rehberler. Grafik tasarım konusunda uzman görüşlerimi paylaşıyorum.
        </p>
      </div>
    </section>

    <!-- Blog Posts Section -->
    <section class="py-20 bg-slate-50 dark:bg-slate-900/50">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Featured Post -->
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-8">Öne Çıkan Yazı</h2>
          <div class="bg-white dark:bg-slate-800 rounded-2xl overflow-hidden border border-slate-200 dark:border-slate-700 hover:shadow-xl transition-all duration-300">
            <div class="grid grid-cols-1 lg:grid-cols-2">
              <div class="relative aspect-[4/3] lg:aspect-square">
                <img 
                  src={blogPosts[0].image} 
                  alt={blogPosts[0].title}
                  class="w-full h-full object-cover"
                />
                <div class="absolute top-4 left-4">
                  <span class="inline-flex items-center px-3 py-1 bg-blue-600 text-white text-sm font-medium rounded-full">
                    {blogPosts[0].category}
                  </span>
                </div>
              </div>
              <div class="p-8 flex flex-col justify-center">
                <div class="flex items-center gap-4 text-sm text-slate-500 dark:text-slate-400 mb-4">
                  <time datetime={blogPosts[0].date}>{new Date(blogPosts[0].date).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
                  <span>•</span>
                  <span>{blogPosts[0].readTime} okuma</span>
                </div>
                <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-4">
                  <a href={`/blog/${blogPosts[0].slug}`} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
                    {blogPosts[0].title}
                  </a>
                </h3>
                <p class="text-slate-600 dark:text-slate-400 mb-6 leading-relaxed">
                  {blogPosts[0].excerpt}
                </p>
                <div class="flex flex-wrap gap-2 mb-6">
                  {blogPosts[0].tags.map((tag) => (
                    <span class="px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 text-sm rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
                <a href={`/blog/${blogPosts[0].slug}`} class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 font-medium hover:gap-3 transition-all duration-300">
                  <span>Devamını Oku</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- All Posts -->
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-8">Tüm Yazılar</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {blogPosts.slice(1).map((post) => (
              <article class="bg-white dark:bg-slate-800 rounded-2xl overflow-hidden border border-slate-200 dark:border-slate-700 hover:shadow-xl transition-all duration-300 group">
                <div class="relative aspect-[4/3] overflow-hidden">
                  <img 
                    src={post.image} 
                    alt={post.title}
                    class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  />
                  <div class="absolute top-4 left-4">
                    <span class="inline-flex items-center px-3 py-1 bg-blue-600 text-white text-sm font-medium rounded-full">
                      {post.category}
                    </span>
                  </div>
                </div>
                <div class="p-6">
                  <div class="flex items-center gap-4 text-sm text-slate-500 dark:text-slate-400 mb-4">
                    <time datetime={post.date}>{new Date(post.date).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
                    <span>•</span>
                    <span>{post.readTime} okuma</span>
                  </div>
                  <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">
                    <a href={`/blog/${post.slug}`} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
                      {post.title}
                    </a>
                  </h3>
                  <p class="text-slate-600 dark:text-slate-400 mb-6 leading-relaxed line-clamp-3">
                    {post.excerpt}
                  </p>
                  <div class="flex flex-wrap gap-2 mb-6">
                    {post.tags.slice(0, 3).map((tag) => (
                      <span class="px-2 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 text-xs rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <a href={`/blog/${post.slug}`} class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 font-medium hover:gap-3 transition-all duration-300 text-sm">
                    <span>Devamını Oku</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>

        <!-- Newsletter Signup -->
        <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 border border-slate-200 dark:border-slate-700">
          <div class="text-center">
            <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-4">
              Tasarım Trendlerini Kaçırmayın
            </h3>
            <p class="text-slate-600 dark:text-slate-400 mb-6 max-w-2xl mx-auto">
              En güncel tasarım trendleri, ipuçları ve rehberler için e-posta listeme katılın. Haftada bir güncelleme alacaksınız.
            </p>
            <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
              <input 
                type="email" 
                placeholder="E-posta adresiniz" 
                class="flex-1 px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                required
              />
              <button type="submit" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-all duration-300">
                Katıl
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
