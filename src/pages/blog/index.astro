---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Nav from '../../components/Nav.astro';

// Blog posts data - same as in [slug].astro
const blogPosts = {
  '2025-grafik-tasarim-trendleri': {
    title: '2025\'te En Popüler Grafik Tasarım Trendleri',
    excerpt: 'Bu yılın en çok konuşulan grafik tasarım trendlerini ve markaların nasıl bu trendleri kullandığını inceliyoruz.',
    category: 'Tasarım Trendleri',
    date: '2025-01-15',
    readTime: '5 dk',
    image: '/images/profile.jpg',
    tags: ['grafik tasarım', 'trendler', '2025', 'tasarım']
  },
  'logo-tasarim-fiyatlari-2025': {
    title: 'Logo Tasarım Fiyatları 2025: Detaylı Rehber',
    excerpt: 'Logo tasarım hizmetlerinin fiyatları nasıl belirlenir? 2025 yılında logo tasarım maliyetleri ve kalite faktörleri.',
    category: 'Fiyat Rehberi',
    date: '2025-01-10',
    readTime: '7 dk',
    image: '/images/profile.jpg',
    tags: ['logo tasarım', 'fiyatlar', 'maliyet', 'rehber']
  },
  'marka-kimligi-neden-onemli': {
    title: 'Marka Kimliği Neden Bu Kadar Önemli?',
    excerpt: 'Güçlü bir marka kimliğinin işletmenizin başarısına nasıl katkı sağladığını ve nasıl oluşturulduğunu açıklıyoruz.',
    category: 'Marka Kimliği',
    date: '2025-01-05',
    readTime: '6 dk',
    image: '/images/profile.jpg',
    tags: ['marka kimliği', 'kurumsal kimlik', 'marka', 'tasarım']
  },
  'sosyal-medya-tasarim-ipuclari': {
    title: 'Etkili Sosyal Medya Tasarımı İçin 10 İpucu',
    excerpt: 'Sosyal medya görsellerinizin daha fazla etkileşim alması için uygulayabileceğiniz tasarım ipuçları.',
    category: 'Sosyal Medya',
    date: '2024-12-28',
    readTime: '8 dk',
    image: '/images/profile.jpg',
    tags: ['sosyal medya', 'tasarım', 'ipuçları', 'etkileşim']
  },
  'ui-ux-tasarim-prensipleri': {
    title: 'UI/UX Tasarımında Temel Prensipler',
    excerpt: 'Kullanıcı deneyimi tasarımının temel prensiplerini ve nasıl uygulanacağını öğrenin.',
    category: 'UI/UX Tasarım',
    date: '2024-12-20',
    readTime: '10 dk',
    image: '/images/profile.jpg',
    tags: ['UI/UX', 'kullanıcı deneyimi', 'tasarım', 'prensipler']
  },
  'grafik-tasarimda-renk-psikolojisi': {
    title: 'Grafik Tasarımda Renk Psikolojisi',
    excerpt: 'Renklerin insan psikolojisi üzerindeki etkilerini ve tasarımda nasıl kullanılacağını keşfedin.',
    category: 'Tasarım Teorisi',
    date: '2024-12-15',
    readTime: '6 dk',
    image: '/images/profile.jpg',
    tags: ['renk psikolojisi', 'tasarım', 'renkler', 'psikoloji']
  }
};

// Convert to array and sort by date
const posts = Object.entries(blogPosts).map(([slug, post]) => ({
  slug,
  ...post
})).sort((a, b) => new Date(b.date) - new Date(a.date));

// SEO data
const seoData = {
  title: 'Grafik Tasarım Blog | Tasarım Trendleri ve İpuçları | Fatih Yıldız',
  description: 'Grafik tasarım, logo tasarımı, marka kimliği ve UI/UX tasarım hakkında güncel trendler, ipuçları ve rehberler.',
  keywords: 'grafik tasarım blog, logo tasarım ipuçları, marka kimliği rehberi, UI/UX tasarım trendleri, sosyal medya tasarım'
};
---

<BaseLayout title={seoData.title} description={seoData.description} keywords={seoData.keywords}>
  <!-- Enhanced Open Graph Meta Tags -->
  <meta property="og:title" content={seoData.title} />
  <meta property="og:description" content={seoData.description} />
  <meta property="og:image" content="/images/profile.jpg" />
  <meta property="og:url" content="https://www.yildizfatih.com/blog" />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content="tr_TR" />
  <meta property="og:site_name" content="Fatih Yıldız Portfolio" />
  
  <!-- Enhanced Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={seoData.title} />
  <meta name="twitter:description" content={seoData.description} />
  <meta name="twitter:image" content="/images/profile.jpg" />
  <meta name="twitter:image:alt" content="Fatih Yıldız Blog" />
  
  <!-- Structured Data for Blog -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Blog",
    "name": "Fatih Yıldız Blog",
    "description": seoData.description,
    "url": "https://www.yildizfatih.com/blog",
    "author": {
      "@type": "Person",
      "name": "Fatih Yıldız",
      "jobTitle": "Profesyonel Grafik Tasarımcı"
    },
    "publisher": {
      "@type": "Organization",
      "name": "Fatih Yıldız Portfolio",
      "logo": {
        "@type": "ImageObject",
        "url": "/images/profile.jpg"
      }
    }
  })} />
  
  <Nav />
  
  <main class="min-h-screen">
    <!-- Blog Header -->
    <section class="relative py-20 bg-slate-50 dark:bg-slate-900/50">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Breadcrumb -->
        <nav class="flex items-center gap-3 text-sm mb-8" aria-label="Breadcrumb">
          <a href="/" class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">Ana Sayfa</a>
          <span class="text-slate-400">/</span>
          <span class="text-slate-900 dark:text-white font-medium">Blog</span>
        </nav>
        
        <!-- Blog Header -->
        <div class="text-center mb-16">
          <h1 class="font-display text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-6">
            Grafik Tasarım <span class="text-blue-600 dark:text-blue-400">Blog</span>
          </h1>
          <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
            Tasarım trendleri, ipuçları ve rehberler ile grafik tasarım dünyasından güncel bilgiler
          </p>
        </div>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="py-20 bg-white dark:bg-slate-900">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <article class="blog-card group bg-white dark:bg-slate-800 rounded-2xl overflow-hidden border border-slate-200 dark:border-slate-700 transition-all duration-500 hover:-translate-y-3 hover:shadow-2xl hover:border-blue-300 dark:hover:border-blue-600">
              <a href={`/blog/${post.slug}`} class="block">
                <div class="relative aspect-[16/9] overflow-hidden">
                  <img 
                    src={post.image} 
                    alt={post.title}
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                  
                  <!-- Category badge -->
                  <div class="absolute top-4 right-4">
                    <span class="inline-flex items-center px-3 py-1 bg-white/90 dark:bg-slate-800/90 text-slate-700 dark:text-slate-300 text-xs font-medium rounded-full backdrop-blur-sm">
                      {post.category}
                    </span>
                  </div>
                </div>
                
                <div class="p-6">
                  <!-- Meta info -->
                  <div class="flex items-center gap-4 text-sm text-slate-500 dark:text-slate-400 mb-4">
                    <time datetime={post.date}>{new Date(post.date).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
                    <span>•</span>
                    <span>{post.readTime} okuma</span>
                  </div>
                  
                  <!-- Title -->
                  <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300 line-clamp-2">
                    {post.title}
                  </h2>
                  
                  <!-- Excerpt -->
                  <p class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed mb-4 line-clamp-3">
                    {post.excerpt}
                  </p>
                  
                  <!-- Tags -->
                  <div class="flex flex-wrap gap-2 mb-4">
                    {post.tags.slice(0, 3).map((tag) => (
                      <span class="px-2 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 text-xs rounded-md border border-slate-200 dark:border-slate-600">
                        {tag}
                      </span>
                    ))}
                  </div>
                  
                  <!-- Read more -->
                  <div class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 font-medium group-hover:gap-3 transition-all duration-300 text-sm">
                    <span>Devamını Oku</span>
                    <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  /* Custom line clamp for blog titles and excerpts */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Enhanced blog card hover effects */
  .blog-card {
    position: relative;
    overflow: hidden;
  }
  
  .blog-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.1), transparent);
    transition: left 0.5s;
  }
  
  .blog-card:hover::before {
    left: 100%;
  }
</style>
