---
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';

// SEO data for services page
const seoData = {
  title: "İstanbul Grafik Tasarım Hizmetleri | Logo, Web, Sosyal Medya ve Baskı Tasarımı 2025 | Fatih Yıldız",
  description: "İstanbul'da profesyonel grafik tasarım hizmetleri. Logo tasarımı, web tasarımı, sosyal medya tasarımı, baskı tasarımı ve marka kimliği. Ücretsiz danışmanlık için iletişime geçin.",
  keywords: "İstanbul grafik tasarım hizmetleri, logo tasarımı, web tasarımı, sosyal medya tasarımı, baskı tasarımı, marka kimliği tasarımı, profesyonel tasarımcı"
};
---

<BaseLayout title={seoData.title} description={seoData.description} keywords={seoData.keywords}>
  <!-- Enhanced Open Graph Meta Tags -->
  <meta property="og:title" content={seoData.title} />
  <meta property="og:description" content={seoData.description} />
  <meta property="og:image" content="/images/profile.jpg" />
  <meta property="og:url" content="https://www.yildizfatih.com/hizmetlerim" />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content="tr_TR" />
  <meta property="og:site_name" content="Fatih Yıldız Portfolio" />
  
  <!-- Enhanced Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={seoData.title} />
  <meta name="twitter:description" content={seoData.description} />
  <meta name="twitter:image" content="/images/profile.jpg" />
  <meta name="twitter:image:alt" content="İstanbul Grafik Tasarım Hizmetleri" />
  
  <!-- Structured Data for Service -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Grafik Tasarım Hizmetleri",
    "description": seoData.description,
    "provider": {
      "@type": "Person",
      "name": "Fatih Yıldız",
      "jobTitle": "Profesyonel Grafik Tasarımcı",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Istanbul",
        "addressCountry": "TR"
      }
    },
    "areaServed": {
      "@type": "Country",
      "name": "Turkey"
    },
    "serviceType": "Graphic Design Services",
    "url": "https://www.yildizfatih.com/hizmetlerim"
  })} />
  
  <Nav />
  
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center px-4 sm:px-6 -mt-32 pt-28 sm:pt-28 md:pt-28 lg:pt-28">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-white to-slate-100 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900"></div>
      <div class="absolute inset-0 opacity-30 dark:opacity-20">
        <div class="absolute top-20 left-10 w-32 h-32 bg-blue-500/5 rounded-full blur-3xl"></div>
        <div class="absolute bottom-20 right-10 w-48 h-48 bg-purple-500/5 rounded-full blur-3xl"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-pink-500/5 rounded-full blur-3xl"></div>
      </div>
      
      <!-- Breadcrumb -->
      <div class="absolute top-8 left-6 z-20">
        <nav class="flex items-center gap-3 text-sm" aria-label="Breadcrumb">
          <a href="/" class="text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">Ana Sayfa</a>
          <span class="text-slate-400">/</span>
          <span class="text-slate-900 dark:text-white font-medium">Hizmetlerim</span>
        </nav>
      </div>
      
      <!-- Main content -->
      <div class="relative z-10 text-center max-w-4xl mx-auto">
        <h1 class="font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-[1.1] mb-6 sm:mb-8">
          <span class="block text-slate-900 dark:text-white">Profesyonel</span>
          <span class="block text-slate-900 dark:text-white"><span class="text-blue-600 dark:text-blue-400">Grafik Tasarım</span></span>
          <span class="block text-slate-900 dark:text-white">Hizmetlerim</span>
        </h1>
        
        <p class="text-lg sm:text-xl md:text-2xl text-slate-600 dark:text-slate-400 max-w-3xl mx-auto mb-8 sm:mb-10 leading-relaxed">
