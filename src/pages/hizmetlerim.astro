<script>
  // Services Contact Form Handler
  document.addEventListener('DOMContentLoaded', function() {
    const servicesContactForm = document.getElementById('servicesContactForm');
    const servicesSubmitBtn = document.getElementById('servicesSubmitBtn');
    const servicesSubmitText = document.getElementById('servicesSubmitText');
    const servicesLoadingText = document.getElementById('servicesLoadingText');
    const servicesFormStatus = document.getElementById('servicesFormStatus');
    const servicesSuccessMessage = document.getElementById('servicesSuccessMessage');
    const servicesErrorMessage = document.getElementById('servicesErrorMessage');
    const servicesErrorText = document.getElementById('servicesErrorText');
    
    if (servicesContactForm) {
      servicesContactForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Form verilerini al
        const formData = new FormData(servicesContactForm);
        
        // Loading state'i göster
        servicesSubmitBtn.disabled = true;
        servicesSubmitText.classList.add('hidden');
        servicesLoadingText.classList.remove('hidden');
        
        // Status mesajlarını gizle
        servicesFormStatus.classList.add('hidden');
        servicesSuccessMessage.classList.add('hidden');
        servicesErrorMessage.classList.add('hidden');
        
        try {
          // Form verilerini gönder
          const response = await fetch('/contact-handler.php', {
            method: 'POST',
            body: formData
          });
          
          const result = await response.json();
          
          if (result.success) {
            // Başarılı
            servicesSuccessMessage.classList.remove('hidden');
            servicesFormStatus.classList.remove('hidden');
            servicesContactForm.reset();
            
            // Redirect URL varsa hemen yönlendir, yoksa 3 saniye bekle
            if (result.redirect) {
              setTimeout(() => {
                window.location.href = result.redirect;
              }, 2000);
            } else {
              setTimeout(() => {
                window.location.href = '/thank-you';
              }, 3000);
            }
          } else {
            // Hata
            servicesErrorText.textContent = result.error || 'Bir hata oluştu. Lütfen tekrar deneyin.';
            servicesErrorMessage.classList.remove('hidden');
            servicesFormStatus.classList.remove('hidden');
          }
        } catch (error) {
          // Network hatası
          servicesErrorText.textContent = 'Bağlantı hatası. Lütfen tekrar deneyin.';
          servicesErrorMessage.classList.remove('hidden');
          servicesFormStatus.classList.remove('hidden');
        } finally {
          // Loading state'i kaldır
          servicesSubmitBtn.disabled = false;
          servicesSubmitText.classList.remove('hidden');
          servicesLoadingText.classList.add('hidden');
        }
      });
    }
  });
</script>
