---
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';

// Get all projects from content files
const modules = import.meta.glob('../content/projects/*.mdx', { eager: true });
const allProjects = Object.entries(modules).map(([path, mod]) => {
  // @ts-ignore
  const fm = mod.frontmatter || {};
  const slug = path.split('/').pop()?.replace('.mdx','');
  return { ...fm, slug, id: slug };
}).sort((a,b) => (b.year||0) - (a.year||0));

// Featured projects in specific order
const featuredProjects = allProjects
  .filter(project => 
    project.slug === 'social-media-designs-vol-3' || 
    project.slug === 'ecommerce-platform' || 
    project.slug === 'logofolio-24'
  )
  .sort((a, b) => {
    // Custom order: Vol.3, E-commerce, Logofolio 2024
    const order = {
      'social-media-designs-vol-3': 1,
      'ecommerce-platform': 2,
      'logofolio-24': 3
    };
    return (order[a.slug] || 0) - (order[b.slug] || 0);
  })
  .map(project => {
    return {
      ...project,
      image: project.cover || '/images/profile.jpg' // Use cover image or fallback to profile
    };
  });

// SEO-optimized meta data - Uzun kuyruklu anahtar kelimelerle güncellendi
const seoData = {
  title: "İstanbul Profesyonel Grafik Tasarımcı | Logo & Marka Kimliği Tasarımı 2025 | Fatih Yıldız",
  description: "İstanbul'da 11+ yıl deneyimli profesyonel grafik tasarımcı. Logo tasarımı, kurumsal kimlik, UI/UX tasarım, sosyal medya tasarımı. Ücretsiz danışmanlık için hemen iletişime geçin.",
  keywords: "İstanbul grafik tasarımcı, logo tasarım fiyatları, kurumsal kimlik tasarımı, UI/UX tasarım, sosyal medya tasarım, marka kimliği, profesyonel tasarımcı, İstanbul tasarım ajansı"
};

// Core skills and expertise
const coreSkills = [
  'Logo Tasarımı',
  'Marka Kimliği',
  'UI/UX Tasarım',
  'Web Arayüzleri',
  'Sosyal Medya Tasarımı',
  'Baskı Materyalleri'
];

// Professional highlights
const highlights = [
  {
    number: '11+',
    label: 'Yıl Deneyim',
    description: 'Grafik tasarım alanında'
  },
  {
    number: '100+',
    label: 'Tamamlanan Proje',
    description: 'Farklı sektörlerde'
  },
  {
    number: '100%',
    label: 'Müşteri Memnuniyeti',
    description: 'Sürekli kalite sunumu'
  }
];
---

<BaseLayout title={seoData.title} description={seoData.description}>
  <!-- Enhanced Open Graph Meta Tags -->
  <meta property="og:title" content={seoData.title} />
  <meta property="og:description" content={seoData.description} />
  <meta property="og:image" content="/images/profile.jpg" />
  <meta property="og:url" content="https://www.yildizfatih.com" />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content="tr_TR" />
  <meta property="og:site_name" content="Fatih Yıldız Portfolio" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:image:alt" content="Fatih Yıldız - Profesyonel Grafik Tasarımcı" />
  
  <!-- Enhanced Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={seoData.title} />
  <meta name="twitter:description" content={seoData.description} />
  <meta name="twitter:image" content="/images/profile.jpg" />
  <meta name="twitter:image:alt" content="Fatih Yıldız - Profesyonel Grafik Tasarımcı" />
  <meta name="twitter:site" content="@yildizfatih" />
  <meta name="twitter:creator" content="@yildizfatih" />
  
  <!-- Additional SEO Meta Tags -->
  <meta name="keywords" content={seoData.keywords} />
  <meta name="author" content="Fatih Yıldız" />
  <meta name="robots" content="index, follow" />
  <meta name="language" content="Turkish" />
  <meta name="revisit-after" content="7 days" />
  
  <!-- Structured Data for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "Fatih Yıldız",
    "jobTitle": "Profesyonel Grafik Tasarımcı",
    "description": seoData.description,
    "url": "https://yildizfatih.com",
    "image": "/images/profile.jpg",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Istanbul",
      "addressCountry": "TR"
    },
    "knowsAbout": coreSkills,
    "worksFor": {
      "@type": "Organization",
      "name": "Serbest Tasarımcı"
    }
  })} />
  
  <Nav />
  
      <!-- Hero Section -->
    <main>
      <section class="relative min-h-screen flex items-center justify-center px-4 sm:px-6 -mt-32 pt-28 sm:pt-28 md:pt-28 lg:pt-28">
      <!-- Subtle background pattern -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-white to-slate-100 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900"></div>
      <div class="absolute inset-0 opacity-30 dark:opacity-20">
        <div class="absolute top-20 left-10 w-32 h-32 bg-blue-500/5 rounded-full blur-3xl"></div>
        <div class="absolute bottom-20 right-10 w-48 h-48 bg-indigo-500/5 rounded-full blur-3xl"></div>
      </div>
      
      <!-- Main content -->
      <div class="relative z-10 text-center max-w-3xl sm:max-w-4xl mx-auto">
        <!-- Availability badge -->
        <div class="inline-flex items-center gap-2 px-3 sm:px-4 py-2 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-700 rounded-full text-xs sm:text-sm font-medium text-blue-700 dark:text-blue-300 mb-6 mt-4 sm:mt-0" id="availability-badge">
          <span class="w-2 h-2 bg-blue-500 rounded-full animate-pulse"></span>
          <span id="availability-text">Yeni projeler için müsait</span>
        </div>
        
        <!-- Main heading -->
        <h1 class="font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold leading-[1.1] mb-6 sm:mb-8">
          <span class="block text-slate-900 dark:text-white">Profesyonel</span>
          <span class="block text-slate-900 dark:text-white"><span class="text-blue-600 dark:text-blue-400">Grafik Tasarımcı</span></span>
          <span class="block text-slate-900 dark:text-white">Portföyü</span>
        </h1>
        
        <!-- Optimized Subtitle -->
        <p class="text-lg sm:text-xl md:text-2xl text-slate-600 dark:text-slate-400 max-w-3xl mx-auto mb-8 sm:mb-10 leading-relaxed">
          Logo tasarımı, marka kimliği, UI/UX tasarım, sosyal medya ve baskı tasarım konularında uzmanlaşmış profesyonel grafik tasarımcı.
        </p>
        
        <!-- Enhanced CTA buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8 sm:mb-10 md:mb-12">
          <a href="#portfolio" class="group relative px-8 sm:px-10 py-4 sm:py-5 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-2xl text-base sm:text-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" aria-label="Portföy bölümüne git">
            <span class="relative z-10">Çalışmalarımı Gör</span>
            <div class="absolute inset-0 bg-white/20 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300" aria-hidden="true"></div>
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300" aria-hidden="true"></div>
          </a>
          
          <a href="#contact" class="px-8 sm:px-10 py-4 sm:py-5 border-2 border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-300 font-semibold rounded-xl hover:bg-slate-50 dark:hover:bg-slate-800 hover:border-slate-400 dark:hover:border-slate-500 transition-all duration-300 text-base sm:text-lg hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" aria-label="İletişim bölümüne git">
            İletişime Geç
          </a>
        </div>
        
        <!-- Compact Professional highlights -->
        <div class="grid grid-cols-3 gap-4 sm:gap-6 max-w-2xl mx-auto">
          {highlights.map((highlight) => (
            <div class="text-center group">
              <div class="text-xl sm:text-2xl md:text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2 group-hover:scale-110 transition-transform duration-300">{highlight.number}</div>
              <div class="text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">{highlight.label}</div>
              <div class="text-xs text-slate-500 dark:text-slate-500">{highlight.description}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Portfolio Section -->
    <section id="portfolio" class="py-20 bg-slate-50 dark:bg-slate-900/50">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Section header -->
        <div class="text-center mb-16">
          <h2 class="font-display text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-6">
            Öne Çıkan <span class="text-blue-600 dark:text-blue-400">Projeler</span>
          </h2>
          <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
            Farklı tasarım disiplinlerinde en iyi çalışmalarımın özenle seçilmiş koleksiyonu
          </p>
        </div>

        <!-- Enhanced Projects Grid - Tab'lar kaldırıldı -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="projectsGrid">
          {featuredProjects.map((project) => (
            <a 
              href={`/work/${project.slug}`}
              class="project-card group block bg-white dark:bg-slate-800 rounded-2xl overflow-hidden border border-slate-200 dark:border-slate-700 transition-all duration-500 hover:-translate-y-3 hover:shadow-2xl hover:border-blue-300 dark:hover:border-blue-600"
            >
              <div class="relative aspect-[4/3] overflow-hidden">
                <img 
                  src={project.image} 
                  alt={`${project.title} - ${project.category}`}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                
                <!-- Enhanced Category badge -->
                <div class="absolute top-4 right-4">
                  <span class="inline-flex items-center px-3 py-1 bg-white/90 dark:bg-slate-800/90 text-slate-700 dark:text-slate-300 text-xs font-medium rounded-full backdrop-blur-sm">
                    {project.category}
                  </span>
                </div>
                
                <!-- Year badge -->
                {project.year && (
                  <div class="absolute top-4 left-4">
                    <span class="inline-flex items-center px-2 py-1 bg-blue-600/90 text-white text-xs font-medium rounded-full backdrop-blur-sm">
                      {project.year}
                    </span>
                  </div>
                )}
              </div>
              
              <div class="p-6">
                <div class="mb-4">
                  <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
                    {project.title}
                  </h3>
                  <p class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed line-clamp-2">
                    {project.summary || project.description}
                  </p>
                </div>
                
                <!-- Enhanced Tags -->
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.tags && project.tags.slice(0, 3).map((tag) => (
                    <span class="px-2 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 text-xs rounded-md border border-slate-200 dark:border-slate-600">
                      {tag}
                    </span>
                  ))}
                </div>
                
                <!-- Enhanced CTA -->
                <div class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 font-medium group-hover:gap-3 transition-all duration-300 text-sm">
                  <span class="project-view-text">Projeyi Görüntüle</span>
                  <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>

        <!-- Enhanced View all projects button -->
        <div class="text-center mt-12">
          <a href="/projects" class="group inline-flex items-center gap-3 px-10 py-5 bg-slate-900 dark:bg-white text-white dark:text-slate-900 font-semibold rounded-xl hover:bg-slate-800 dark:hover:bg-slate-100 transition-all duration-300 hover:shadow-xl transform hover:scale-105">
            <span>Tüm Projeleri Gör</span>
            <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 bg-white dark:bg-slate-900">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Section header -->
        <div class="text-center mb-16">
          <h2 class="font-display text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-6">
            Hakkımda
          </h2>
          <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
            Merhaba! Ben Fatih Yıldız, 11 yılı aşkın süredir grafik tasarım alanında çalışan tutkulu bir tasarımcıyım
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Profile image -->
          <div class="relative">
            <div class="aspect-square rounded-3xl overflow-hidden bg-gradient-to-br from-blue-500/20 to-purple-500/20 p-1">
              <img 
                src="/images/profile.jpg" 
                alt="Fatih Yıldız - Profesyonel Grafik Tasarımcı" 
                class="w-full h-full object-cover rounded-3xl"
              />
            </div>
            <!-- Subtle decorative elements -->
            <div class="absolute -top-4 -right-4 w-20 h-20 bg-blue-500/10 rounded-full blur-xl"></div>
            <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-purple-500/10 rounded-full blur-xl"></div>
          </div>

          <!-- About content -->
          <div class="space-y-6">
            <h3 class="text-2xl font-bold text-slate-900 dark:text-white">
              Tasarım Deneyimim
            </h3>
            <div class="space-y-4 text-slate-600 dark:text-slate-400 leading-relaxed">
              <p>
                11 yılı aşkın süredir profesyonel olarak grafik tasarım alanında çalışıyorum. Deneyimim boyunca farklı sektörlerden markalara, ihtiyaçlarına özel yaratıcı çözümler sundum.
              </p>
              <p>
                Logo tasarımı, kurumsal kimlik, UI/UX tasarım, web arayüzleri, sosyal medya görselleri, basılı materyaller ve reklam tasarımları gibi grafik tasarımın birçok alanında işler üretebiliyorum. Tasarımlarımı yalnızca estetik değil, aynı zamanda işlevsel, kullanıcı odaklı ve markanın kimliğini yansıtan şekilde kurgulamayı önemsiyorum.
              </p>
              <p>
                Amacım; markaların dijital ve geleneksel mecralarda öne çıkmasını sağlayacak, akılda kalıcı ve modern tasarımlar üretmek.
              </p>
            </div>
            
            <!-- Core skills -->
            <div class="pt-4">
              <h4 class="text-lg font-semibold text-slate-900 dark:text-white mb-3">Uzmanlık Alanlarım</h4>
              <div class="flex flex-wrap gap-3">
                {coreSkills.map((skill) => (
                  <span class="px-3 py-1.5 bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 text-sm font-medium rounded-lg border border-slate-200 dark:border-slate-700">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section - Minimal -->
    <section id="contact" class="py-20 bg-slate-50 dark:bg-slate-900/50">
      <div class="max-w-4xl mx-auto px-6">
        <!-- Section header -->
        <div class="text-center mb-16">
          <h2 class="font-display text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-6">
            Birlikte <span class="text-blue-600 dark:text-blue-400">Çalışalım</span>
          </h2>
          <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
            Fikirlerinizi hayata geçirmeye hazır mısınız? Yeni projeler ve yaratıcı fırsatlar hakkında konuşmaktan her zaman heyecan duyarım.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact form -->
          <div class="space-y-6">
            <h3 class="text-2xl font-bold text-slate-900 dark:text-white">Bana mesaj gönder</h3>
            
            <form class="space-y-4" action="/contact-handler.php" method="POST" aria-label="İletişim formu" id="contactForm">
              <!-- Form handler için -->
              <input type="hidden" name="_next" value="/thank-you" />
              <input type="hidden" name="_subject" value="Portfolio'dan Yeni Mesaj" />
              
              <div>
                <label for="name" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Ad Soyad <span class="text-red-500" aria-label="zorunlu alan">*</span></label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300"
                  placeholder="Adınız ve soyadınız"
                  required
                  aria-required="true"
                  aria-describedby="name-error"
                />
                <div id="name-error" class="sr-only" role="alert"></div>
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">E-posta <span class="text-red-500" aria-label="zorunlu alan">*</span></label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300"
                  placeholder="email@adresiniz.com"
                  required
                  aria-required="true"
                  aria-describedby="email-error"
                />
                <div id="email-error" class="sr-only" role="alert"></div>
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Konu <span class="text-red-500" aria-label="zorunlu alan">*</span></label>
                <select 
                  id="subject" 
                  name="subject" 
                  class="w-full px-4 py-3 pr-10 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 cursor-pointer hover:border-slate-400 dark:hover:border-slate-500"
                  required
                  aria-required="true"
                  aria-describedby="subject-error"
                >
                  <option value="">Konu seçiniz</option>
                  <option value="logo-tasarim">Logo Tasarımı</option>
                  <option value="marka-kimligi">Marka Kimliği</option>
                  <option value="ui-ux-tasarim">UI/UX Tasarım</option>
                  <option value="sosyal-medya">Sosyal Medya Tasarımı</option>
                  <option value="baski-materyalleri">Baskı Materyalleri</option>
                  <option value="diger">Diğer</option>
                </select>
                <div id="subject-error" class="sr-only" role="alert"></div>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Mesaj <span class="text-red-500" aria-label="zorunlu alan">*</span></label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="4" 
                  class="w-full px-4 py-3 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 resize-none"
                  placeholder="Projeniz hakkında bana anlatın..."
                  required
                  aria-required="true"
                  aria-describedby="message-error"
                ></textarea>
                <div id="message-error" class="sr-only" role="alert"></div>
              </div>
              
              <button 
                type="submit" 
                id="submitBtn"
                class="w-full px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed"
                aria-label="Mesajı gönder"
              >
                <span id="submitText">Mesaj Gönder</span>
                <span id="loadingText" class="hidden">Gönderiliyor...</span>
              </button>
                          </form>
              
              <!-- Form Status Messages -->
              <div id="formStatus" class="hidden mt-4 p-4 rounded-lg">
                <div id="successMessage" class="hidden text-green-700 bg-green-100 border border-green-200 rounded-lg p-4">
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="font-medium">Mesajınız başarıyla gönderildi!</span>
                  </div>
                </div>
                <div id="errorMessage" class="hidden text-red-700 bg-red-100 border border-red-200 rounded-lg p-4">
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                    <span id="errorText" class="font-medium">Bir hata oluştu. Lütfen tekrar deneyin.</span>
                  </div>
                </div>
              </div>
