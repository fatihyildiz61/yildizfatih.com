---
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';

const seoData = {
  title: "Teşekkürler - Mesajınız Alındı | Fatih Yıldız Portfolio",
  description: "Mesajınız başarıyla alındı. En kısa sürede size dönüş yapacağım.",
  keywords: "teşekkürler, mesaj alındı, iletişim, Fatih Yıldız"
};
---

<BaseLayout title={seoData.title} description={seoData.description}>
  <!-- SEO Meta Tags -->
  <meta name="robots" content="noindex, nofollow" />
  
  <Nav />
  
  <main class="min-h-screen flex items-center justify-center px-6 pt-32">
    <div class="text-center max-w-2xl mx-auto">
      <!-- Success Icon -->
      <div class="mb-8">
        <div class="w-32 h-32 mx-auto bg-gradient-to-br from-green-500/20 to-blue-500/20 rounded-full flex items-center justify-center">
          <svg class="w-16 h-16 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
      </div>
      
      <!-- Success Message -->
      <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-6">
        Teşekkürler!
      </h1>
      
      <p class="text-xl text-slate-600 dark:text-slate-400 mb-8 leading-relaxed">
        Mesajınız başarıyla alındı. En kısa sürede size dönüş yapacağım. 
        Genellikle 24 saat içinde yanıt veririm.
      </p>
      
      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a href="/" class="px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-xl">
          Ana Sayfaya Dön
        </a>
        <a href="/projects" class="px-8 py-4 border-2 border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-300 font-semibold rounded-lg hover:bg-slate-50 dark:hover:bg-slate-800 hover:border-slate-400 dark:hover:border-slate-500 transition-all duration-300">
          Projeleri Gör
        </a>
      </div>
      
      <!-- Additional Info -->
      <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-700 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-3">Ne Olacak?</h3>
        <ul class="text-left text-slate-600 dark:text-slate-400 space-y-2">
          <li class="flex items-start gap-2">
            <span class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></span>
            <span>Mesajınızı detaylıca inceleyeceğim</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></span>
            <span>Proje gereksinimlerinizi analiz edeceğim</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></span>
            <span>Size özel teklif ve öneriler sunacağım</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></span>
            <span>Gerekirse ek bilgi isteyeceğim</span>
          </li>
        </ul>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /* Smooth animations */
  main {
    animation: fadeInUp 0.6s ease-out;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Success icon animation */
  .w-32 {
    animation: successPulse 2s ease-in-out infinite;
  }
  
  @keyframes successPulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }
</style>
